{
  "manifest_version": 3,
  "name": "InsertWrap",
  "version": "1.0.2",
  "description": "メール送信前に指定桁数で改行を挿入",
  "author": "D.N.A. Softwares",
  "browser_specific_settings": {
    "gecko": {
      "id": "insertwrap@dna-softwares.com",
      "strict_min_version": "128.0"
    }
  },
  "permissions": ["compose", "storage", "menus"],
  "background": {
    "scripts": ["lib/text-wrapper.js", "background.js"]
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "compose_action": {
    "default_title": "折り返し改行",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }
}
